!!! 5

%html.no-js{ :lang => 'en' }

  %head

    %meta{ :charset => 'utf-8'}
    %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1' }
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale = 1' }
    - if content_for?(:meta_description)
      %meta{ :name => 'description', :content => yield_content(:meta_description) }

    %title= content_for?(:page_title) ? 'Kuotes - ' + yield_content(:page_title) : 'Kuotes'

    %link{ :rel => 'author', :href => '/kuotes/humans.txt', :type => 'text/plain' }
    %link{ :rel => "shortcut icon", :href => '/kuotes/img/favicon.ico', :type => 'image/x-icon' }
    %link{ :rel => 'stylesheet', :href => '/kuotes/css/style.css' }

    %script{ :src => 'js/modernizr.js' }
    %script{ :src => '//use.typekit.net/wtu2wmq.js' }
    %script try{Typekit.load();}catch(e){}

    -# Addition HEAD stuff for your page (CSS, JS, Meta)
    = yield_content(:page_head_additions)

  %body
    .wrapper

      %header.masthead
        %a.logo.mega{ :href => 'http://danielguillan.github.io/kuotes/' }
          Kuotes

      %nav.main-nav
        %a.main-nav__link{ :href => 'about.html', title: 'Learn more about Kuotes and the author' }About

      -# Page content
      = yield

      %footer.cf

    -# Addition Footer stuff for your page (Usually, page-specific JS)
    = yield_content(:page_foot_additions)

    %script{ :src => '/kuotes/js/zepto.js' }

    :javascript
      $('.kuote__text').each(function(){
        var $k = $(this);
        $k.html($k.html().replace(/\s([^\s<]+)\s*$/,'&#160;$1'));
      });

